// top parallax
#profile.scrollspy.parallax-container(style='height:75vh;background-color:rgba(0,0,0,0.2);z-index:-1;')
  .parallax
    img.dim(src='https://res.cloudinary.com/hyuwah-github-io/image/upload/v1514133423/cattypefrenzy.gif', style='display:block')
    //img.dim(src='https://res.cloudinary.com/hyuwah-github-io/image/upload/v1514132722/catwpm.gif', style='display:block')
    //img.dim(src='{{ site.mainimg.top }}', alt='top main image', style='display:block;')
  .header-top.center-align.container-front(style="margin-top:15vh")
    div.hide-on-med-and-down(style="margin:-25px;margin-bottom:16px")
      img.responsive-img.circle(src="assets/images/pp-square.webp", width="96")
    h1.white-text(style='font-weight:300;') {{ site.owner.name }}
    h2.white-text {{ site.owner.taglines }}
// top parallax
section.intro
  .container-front.section
    .row.about-card
      .col.s12.l12.about-card-mobile
        .card.hoverable
          .card-content
            div.hide-on-large-only.center-align(style="margin:0px")
              img.responsive-img.circle(src="assets/images/pp-square.webp", width="96")
            h3.blue-text.lighten-1.center-align Hello there!
            p.flow-text I'm Wahyu, fresh graduate with bachelor's degree in Physics from Universitas Padjadjaran. Full-time C# developer, part-time Web Developer.
// Include Portfolio Items
section.portfolio.blue.lighten-1
  .container-front.portfolio-container
    #portfolio.row.scrollspy
      .portfolio-header
        // Ganti jadi kreasi / karya
        h3.white-text Projects
        p.flow-text.white-text
          | Highlighted projects
      // portfolio item
      div
        | {% include portfolio.html %}
// bottom parallax
.parallax-container(style='height:40vh;background-color:rgba(0,0,0,0.2);z-index:-1;')
  .parallax
    img.dim(src='{{ site.mainimg.bottom }}', alt='bottom main image', style='display:block;')
// bottom parallax
// TOC
ul#sticky.card-panel.section.table-of-contents.hide-on-med-and-down
  li
    a#toc-1(href='#profile',style='color:grey;') Profile
  li
    a#toc-2(href='#portfolio', style='color:grey;') Projects
  li
    a#toc-3(href='#contact', style='color:grey;') Contact
  li
    a#goup(href='#', style='color:grey') Go ⬏
section.section(style='padding-bottom:0;')
  // contact form
  .container-front.fade-in(style='display: block; opacity: 1;')
    .section
      #contact.row.scrollspy
        h3.blue-text.lighten-1 Contact
        // Contact Links
        .col.s12.m4
          p
            | If you'd like to discuss something or just want to say hi, feel free 
            | to contact me via links below or this form. :)
          ul.icons
            | {% if site.owner.linkedin.show == true %}
            li
              a(target='_blank', href='{{ site.owner.linkedin.url }}')
                i.fa.fa-linkedin-square.fa-lg.fa-fw(style='vertical-align:middle;')
                |   Linkedin
            |             {% endif %}
            |             {% if site.owner.facebook.show == true %}
            li
              a(target='_blank', href='{{ site.owner.facebook.url }}')
                i.fa.fa-facebook-square.fa-lg.fa-fw(style='vertical-align:middle;')
                |   Facebook
            |             {% endif %}
            //- |             {% if site.owner.twitter.show == true %}
            //- li
            //-   a(target='_blank', href='https://twitter.com/{{ site.owner.twitter.username }}')
            //-     i.fa.fa-twitter.fa-lg.fa-fw(style='vertical-align:middle;')
            //-     |   Twitter
            //- |             {% endif %}
            li
              a(target='_blank', href='mailto:{{ site.owner.email }}')
                i.fa.fa-send.fa-lg.fa-fw(style='vertical-align:middle;')
                |   Email
        // Form contact
        .col.s12.m8.grey-text.text-darken-3
          form#contactForm.no-smoothState(action="https://formspree.io/{{ site.owner.email }}", method="POST", accept-charset="UTF-8")
            .input-field
              input#formName(type='text', name='name', maxlength='50', required='')
              label(for='name')
                | Name
            .input-field
              input#formEmail.validate(type='email', name='email', required='')
              label(for='email')
                | Email *
            .input-field
              textarea#formMessage.materialize-textarea.validate(type='text', name='message', rows='5', length='1000', maxlength='1000')
              label(for='message')
                | Message *
              input#formSubject(type='hidden', name='_subject', value='New submission from hyuwah.github.io')
              input#formNext(type='hidden', name='_next', value='http://hyuwah.github.io/thanks')
              input#formHoneypot(type='text', name='_gotcha', style='display:none')
            .row
              .col.s12
                #contactdivT
                  button#buttonForm.waves-effect.waves-light.red.accent-2.btn.right(type='submit', value='Send')
                    | Send 
                    i.mdi-content-send.right
                  p#messageP.red-text.accent-2
